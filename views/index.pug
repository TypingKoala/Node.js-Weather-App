html
  head
    title #{location}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    link(rel='stylesheet', href='assets/css/main.css')
  body.is-preload
    // Header
    header#header
      h1 It is currently #{temperature} and #{conditions}.
      h3 #{location}
      p #{summary}
    // Search Location
    form#signup-form(method='POST', action='/')
      input#search(type='search', name='search', placeholder="What's the weather in...")
      input(type='submit', value='search')
    // Footer
    footer#footer
      ul.copyright
